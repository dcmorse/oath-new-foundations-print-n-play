#!/usr/bin/bash
set -ex

rm -rf input/ 
rm -rf output/ wip/ 
mkdir -p input/{servant-nf,servant-base,queen-of-shadows,base} output/{servant-nf,servant-base,queen-of-shadows,base} wip/{servant-nf,servant-base,queen-of-shadows,base} releases/
./make-player-aids
python namer.py 
python oath.py --new-foundations --servant-nf --servant-base --queen-of-shadows --base
rm -rf wip/*.* wip/*/*.*
tar -zcf "releases/$(date -u +%Y-%m-%d-%H%M%S).tar.gz" output/ input/
